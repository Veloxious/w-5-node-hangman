<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
  </head>
  <body>
    <h1>{{title}}</h1>
    <h1 {{hiddenForm}}>Guesses remaining: {{guessCounter}}</h1>
    <form {{hiddenButton}} class="button" action="/easy" method="post">
      <button type="submit" name="easy">Easy</button>
    </form>
    <form {{hiddenButton}} class="button" action="/normal" method="post">
      <button type="submit" name="normal">Normal</button>
    </form>
    <form {{hiddenButton}} class="button" action="/hard" method="post">
      <button type="submit" name="hard">Hard</button>
    </form>
    <h1>{{theWord}}</h1>
    <h1>{{displayWord}}</h1>
    <form {{hiddenForm}} name="guess" action="/hangman/guess" method="post">
      <input autofocus  type="text" name="guess" value="" palceholder="guess a letter">
      <button type="submit" name="guessButton">Go!</button>
      <br>
      <span>{{guessedLeters}}</span>
    </form>
  </body>
</html>
